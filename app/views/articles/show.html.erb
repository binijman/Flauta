<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Post:</strong>
  <%= @article.post %>
</p>

<!-- <p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p> -->

<h2>Please let us know what you think about this article!</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Your name:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Your comments:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, :class => 'commenter' %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'comment-body' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
