</br> </br>
<h5>Comments section:</h5>

<% @article.comments.each do |comment| %>
  <p>
    <em><%= comment.commenter %>:</em>
    <%= comment.body %>
  </p>
<% end %>

</br></br>

<h4>Please let us know what you think about this article!</h4>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.label 'Your name:' %><br>
    <%= f.text_field :commenter, :class => 'commenter form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Your comment:' %><br>
    <%= f.text_area :body, :class => 'comment-body form-control' %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>

