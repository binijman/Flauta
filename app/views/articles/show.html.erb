<p id="notice"><%= notice %></p>

<h1>
  <strong>
  <%= @article.title %></strong>
</h1>

<p>
  <%= @article.post %>
</p>

<!-- <p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p> -->
</br> </br>
<h4>Comments section:</h4>

<% @article.comments.each do |comment| %>
  <p>
    <em><%= comment.commenter %>:</em>
    <%= comment.body %>
  </p>
<% end %>

</br></br>

<h3>Please let us know what you think about this article!</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.label 'Your name:' %><br>
    <%= f.text_field :commenter, :class => 'commenter form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Your comment:' %><br>
    <%= f.text_area :body, :class => 'comment-body form-control' %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
