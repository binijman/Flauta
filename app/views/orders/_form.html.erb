<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class= "field">
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :adress %><br>
        <%= f.text_area :adress %>
      </div>
      <div class="field">
        <%= f.label :postal %><br>
        <%= f.text_field :postal %>
      </div>
      <div class="field">
        <%= f.label :city %><br>
        <%= f.text_field :city %>
      </div>
</div>

<div class= "listing_field">
    <h1>Flauta Shop</h1>

  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th class="qty">Quantity to Order</th>
        <th colspan="3"></th>
      </tr>
    </thead>


      <tbody>
        <%= f.fields_for :order_lines do |o| %>
          <tr>
            <%= o.hidden_field :flautum_id %>
            <td class="image"><%= image_tag o.object.flautum.image %></td>
            <td class="name"><%= o.object.flautum.name %></td>
            <td class="price"><%= number_to_currency(o.object.flautum.price, unit: "â‚¬ ")  %></td>
            <td class="desciption"><%= o.object.flautum.description %></td>
            <td class="qty"><%= o.number_field :quantity %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
